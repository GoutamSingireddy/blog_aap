

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
	  <th>Id</th>
      <th>Name</th>
	  <th>Vehicles</th>
      <th>Email</th>
      <th><%= link_to 'username', :sort => "username" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
	     <td><%=user.id %></td>
        <td><%= user.name %></td>
		<td><% user.vehicles.each do |vehicle| %>
		    <%=vehicle.make %> <%=vehicle.model %> <br>
			<% end %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
		<td><%= link_to 'add vehicle', new_vehicle_path %></td>

        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<select name="user_obj_name">
<% @users.each do |user|%>
<option value ="<% user.id %>"><%= user.name%></option>
<% end %>
</select>
